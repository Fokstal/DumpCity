@model DumpCity.Models.ViewModel.DetailsVM

<div class="">
    <form method="post">
        <input asp-for="@Model.Product.ID" hidden>
        <div class="container pt-4"  >
            <div class="card" style="border:1px solid #000000; ">
                <div class="card-header bg-dark text-light ms-0 row container" style="border-radius: 0px;">
                    <div class="col-12 col-md-6">
                        <h1 class="text-white">@Model.Product.Name</h1>
                    </div>
                    <div class="col-12 col-md-6 text-md-end">
                        <h1 class="text-warning" >@Model.Product.Price.ToString("c")</h1>
                    </div>
                </div>
                <div class="card-body">
                    <div class="container rounded p-2">
                        <div class="row">
                            <div class="col-12 col-lg-4 p-1 text-center">
                                <img src="@WC.imageProductFolderPath@Model.Product.ImageURL" width="100%" class="rounded"/>
                            </div>
                            <div class="col-12 col-lg-8">
                                <div class="row ps-3">

                                    <div class="col-12">
                                        <span class="badge p-3 border" style="background-color:lavenderblush; color: black">@Model.Product.Category.Name</span>
                                        <span class="badge p-3 border" style="background-color:azure; color: black">@Model.Product.AppType.Name</span>
                                        <h3 class="text-success"></h3>

                                        <p class="text-secondary">@Html.Raw(Model.Product.Desc)</p>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-dark">
                    <div class="row">
                        <div class="col-12 col-md-6">
                            @if (Model.IsExistsProductInCart)
                            {
                                <a asp-action="RemoveFromCart" asp-route-id="@Model.Product.ID" class="btn btn-danger form-control btn-lg" style="height:50px;">
                                    <i class="fa-regular fa-circle-xmark"></i> &nbsp; Remove from Cart
                                </a>
                            }
                            @if (!Model.IsExistsProductInCart)
                            {
                                <button type="submit" asp-route-id="@Model.Product.ID" href="#" class="btn btn-success form-control btn-lg" style="height:50px;">
                                    <i class="fa-regular fa-circle-check"></i> &nbsp; Add to Cart
                                </button>
                            }
                        </div>
                        <div class="col-12 col-md-6 pb-1 ">
                            <a class="btn btn-warning btn-square form-control btn-lg" asp-action="Index" style="height:50px;">
                                <i class="fa-solid fa-arrow-right-from-bracket"></i> &nbsp; Back to List
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

<style>

    img {
        height: 500px!important;
        object-fit: contain;
    }

</style>