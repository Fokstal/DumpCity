@using DumpCity.Models.ViewModel

@model DumpCity.Models.ViewModel.HomeVM

@* @{
    ViewData["Title"] = "Home Page";
} *@

<div class="container">
    <div class="text-center">
        <button class="btn btn-dark filter-button" data-filter="all">
            All
        </button>

        @foreach(var el in Model.Categories)
        {
            <button class="btn btn-outline-secondary filter-button" data-filter="@el.Name?.Replace(' ', '_')">
                @el.Name
            </button>
        }
    </div>
    <br>
    <div class="row">
        @foreach(DetailsVM el in Model.Products)
        {
            <partial name="_IndividualProductCard" model="@el"></partial>
        }
    </div>
</div>

@section Scripts {
    <script>
    $(document).ready(function(){

    $(".filter-button").click(function(){

        var value = $(this).attr('data-filter');
        if(value == "all")
        {
            $('.filter').show('1000');
            return;
        }
        
        $(".filter").not('.'+value).hide('3000');
        $('.filter').filter('.'+value).show('3000');
    });

});
</script>
}